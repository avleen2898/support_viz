{
  "name": "support-viz",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "full-dev": "concurrently \"PORT=3001 nodemon ./bin/www\" \"npm start --prefix frontend\"",
    "full-dev-windows": "concurrently \"set PORT=3001 && nodemon ./bin/www\" \"npm start --prefix frontend\"",
    "server-dev": "nodemon ./bin/www",
    "client-dev": "(cd frontend && npm run server)",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "http-errors": "~1.6.3",
    "is-empty": "^1.2.0",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.15",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pug": "^3.0.1",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.4"
  }
}
